<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ming.framework"
          android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MANAGE_APP_TOKENS"/>

    <application
            android:name="com.ming.FApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <!-- ################ activity ################ -->
        <activity
                android:name="com.ming.androidstudy.ui.activity.MainActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.ming.androidstudy.ui.activity.FrameworkActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity android:name="com.ming.androidstudy.ui.activity.NDKActivity"/>
        <!-- ################ activity ################ -->

        <!-- ################ service ################ -->
        <service
                android:name="com.ming.androidstudy.service.StudyService"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="com.ming.studyService"/>
            </intent-filter>
        </service>
        <!-- ################ service ################ -->

        <!-- ################ receiver ################ -->
        <receiver
                android:name="com.ming.androidstudy.receiver.StudyReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="com.ming.studybroadcast"/>

                <data android:scheme="study"/>
            </intent-filter>
        </receiver>
        <!-- ################ receiver ################ -->

    </application>

</manifest>